{
  "name": "@agoric/xsnap",
  "version": "0.11.0",
  "description": "Description forthcoming.",
  "author": "Agoric",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/index.js",
  "bin": {
    "ava-xs": "./src/ava-xs.js",
    "xsrepl": "./src/xsrepl"
  },
  "scripts": {
    "repl": "node src/xsrepl.js",
    "build:bundle": "rollup --config rollup.config.js",
    "build:bin": "node src/build.js",
    "build": "yarn build:bin && yarn build:bundle",
    "clean": "rm -rf xsnap-native/xsnap/build",
    "lint": "yarn lint:js && yarn lint:types",
    "lint:js": "eslint 'src/**/*.js' 'lib/**/*.js' api.js",
    "lint:types": "tsc -p jsconfig.json",
    "lint-fix": "eslint --fix 'src/**/*.js' 'lib/**/*.js' api.js",
    "lint-check": "yarn lint",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0"
  },
  "dependencies": {
    "@agoric/assert": "^0.3.15",
    "@agoric/babel-standalone": "^7.14.3",
    "@agoric/bundle-source": "^2.0.1",
    "@agoric/eventual-send": "^0.14.0",
    "@agoric/install-ses": "^0.5.29",
    "@endo/netstring": "^0.2.13",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@endo/base64": "^0.2.13",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^6.1.0",
    "ava": "^3.12.1",
    "c8": "^7.7.2",
    "rollup-plugin-terser": "^5.1.3"
  },
  "files": [
    "LICENSE*",
    "lib",
    "api.js",
    "makefiles",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ],
    "ignorePatterns": [
      "examples/**/*.js"
    ]
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "2m"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  }
}

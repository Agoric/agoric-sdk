{
  "name": "@agoric/xsnap",
  "version": "0.14.2",
  "description": "Description forthcoming.",
  "author": "Agoric",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/index.js",
  "bin": {
    "ava-xs": "./src/ava-xs.js",
    "xsrepl": "./src/xsrepl"
  },
  "scripts": {
    "repl": "node src/xsrepl.js",
    "build:bin": "/bin/sh -c 'if git status >/dev/null 2>&1; then node src/build.js; else yarn build:from-env; fi'",
    "build:env": "/bin/sh -c 'if git status >/dev/null 2>&1; then node src/build.js --show-env > build.env; fi'",
    "build:from-env": "{ cat build.env; echo node src/build.js; } | xargs env",
    "build": "yarn build:bin && yarn build:env",
    "postinstall": "yarn build:from-env",
    "clean": "rm -rf xsnap-native/xsnap/build",
    "lint": "run-s --continue-on-error lint:*",
    "lint:js": "eslint 'src/**/*.js' 'test/**/*.js' api.js",
    "lint:types": "tsc",
    "lint-fix": "eslint --fix 'src/**/*.js' 'test/**/*.js' api.js",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0"
  },
  "dependencies": {
    "@agoric/assert": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/xsnap-lockdown": "workspace:*",
    "@endo/bundle-source": "^3.0.1",
    "@endo/eventual-send": "^1.0.1",
    "@endo/init": "^1.0.1",
    "@endo/netstring": "^1.0.1",
    "@endo/promise-kit": "^1.0.1",
    "@endo/stream": "^1.0.1",
    "@endo/stream-node": "^1.0.1",
    "glob": "^7.1.6",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@endo/base64": "^1.0.0",
    "@types/glob": "^8.1.0",
    "ava": "^5.3.0",
    "c8": "^7.13.0"
  },
  "files": [
    "LICENSE*",
    "api.js",
    "build.env",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 94.43
  }
}

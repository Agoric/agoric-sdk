{
  "name": "@agoric/casting",
  "version": "0.4.2",
  "description": "Agoric's OCap broadcasting system",
  "type": "module",
  "main": "src/main.js",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "scripts": {
    "build": "exit 0",
    "prepack": "yarn run -T tsc --build tsconfig.build.json",
    "postpack": "git clean -f '*.d.ts*' '*.tsbuildinfo'",
    "demo": "node -e 'import(\"./test/fake-rpc-server.js\").then(ns => ns.develop())'",
    "test": "ava",
    "test:c8": "c8 --all ${C8_OPTIONS:-} ava",
    "test:xs": "exit 0",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint:types": "yarn run -T tsc",
    "lint:eslint": "yarn run -T eslint ."
  },
  "keywords": [],
  "author": "Agoric",
  "license": "Apache-2.0",
  "dependencies": {
    "@agoric/internal": "workspace:*",
    "@agoric/notifier": "workspace:*",
    "@agoric/store": "workspace:*",
    "@cosmjs/encoding": "^0.36.0",
    "@cosmjs/proto-signing": "^0.36.0",
    "@cosmjs/stargate": "^0.36.0",
    "@cosmjs/tendermint-rpc": "^0.36.0",
    "@endo/errors": "^1.2.13",
    "@endo/far": "^1.1.14",
    "@endo/init": "^1.1.12",
    "@endo/lockdown": "^1.0.18",
    "@endo/marshal": "^1.8.0",
    "@endo/promise-kit": "^1.1.13"
  },
  "devDependencies": {
    "@agoric/cosmic-proto": "workspace:*",
    "@endo/ses-ava": "^1.3.2",
    "ava": "^5.3.0",
    "c8": "^10.1.3",
    "express": "^5.0.1",
    "tsd": "^0.31.2",
    "ws": "^7.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20.9 || ^22.11"
  },
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "timeout": "20m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 89.19
  }
}

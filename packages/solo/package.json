{
  "name": "@agoric/solo",
  "version": "0.4.3",
  "description": "Agoric's Solo vat runner",
  "type": "module",
  "bin": {
    "ag-solo": "src/entrypoint.js"
  },
  "main": "src/main.js",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "scripts": {
    "build": "exit 0",
    "test": "ava",

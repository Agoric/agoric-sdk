  "devDependencies": {
    "@agoric/bundle-source": "^1.4.9",
    "@agoric/ertp": "^0.11.16",
    "ava": "^3.12.1",
    "c8": "^7.7.2"
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=11.0"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "20m"
  }

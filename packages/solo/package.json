  "license": "Apache-2.0",
  "dependencies": {
    "@agoric/access-token": "^0.4.12",
    "@agoric/assert": "^0.3.11",
    "@agoric/babel-standalone": "^7.14.3",
    "@agoric/captp": "^1.10.3",
    "@agoric/cosmic-swingset": "^0.33.3",
    "@agoric/dapp-svelte-wallet": "^0.11.1",
    "@agoric/eventual-send": "^0.13.27",
    "@agoric/import-bundle": "^0.2.28",
    "@agoric/install-ses": "^0.5.25",
    "@agoric/marshal": "^0.4.25",
    "@agoric/notifier": "^0.3.28",
    "@agoric/promise-kit": "^0.2.25",
    "@agoric/spawner": "^0.4.28",
    "@agoric/store": "^0.6.3",
    "@agoric/swing-store-lmdb": "^0.5.11",
    "@agoric/swingset-vat": "^0.21.3",
    "@agoric/vats": "^0.3.1",

    "anylogger": "^0.21.0",
    "deterministic-json": "^1.0.5",
    "express": "^4.17.1",
    "import-meta-resolve": "^1.1.1",
    "minimist": "^1.2.0",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.0",
    "node-lmdb": "^0.9.4",
    "temp": "^0.9.1",
    "tmp": "^0.2.1",
    "ws": "^7.2.0"

{
  "name": "@agoric/boot",
  "version": "0.1.0",
  "private": true,
  "description": "Config and utilities to bootstrap an Agoric chain",
  "type": "module",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "scripts": {
    "build": "exit 0",
    "test": "ava",
    "test:xs": "SWINGSET_WORKER_TYPE=xs-worker ava 'test/bootstrapTests/**/test-*.js' 'test/upgrading/**/test-*.js'",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "run-s --continue-on-error lint:*",
    "lint:types": "tsc",
    "lint:eslint": "eslint ."
  },
  "keywords": [],
  "author": "Agoric",
  "license": "Apache-2.0",
  "dependencies": {
    "@agoric/assert": "^0.6.0",
    "@agoric/cosmic-proto": "^0.4.0",
    "@agoric/builders": "^0.1.0",
    "@agoric/cosmic-swingset": "^0.41.3",
    "@agoric/ertp": "^0.16.2",
    "@agoric/internal": "^0.3.2",
    "@agoric/inter-protocol": "^0.16.1",
    "@agoric/kmarshal": "^0.1.0",
    "@agoric/notifier": "^0.6.2",
    "@agoric/swing-store": "^0.9.1",
    "@agoric/swingset-vat": "^0.32.2",
    "@agoric/telemetry": "^0.6.2",
    "@agoric/time": "^0.3.2",
    "@agoric/vat-data": "^0.5.2",
    "@agoric/vats": "^0.15.1",
    "@agoric/vm-config": "^0.1.0",
    "@agoric/zoe": "^0.26.2",
    "@agoric/zone": "^0.2.2",
    "@endo/marshal": "^1.3.0",
    "@endo/bundle-source": "^3.1.0",
    "@endo/captp": "^4.0.4",
    "@endo/eventual-send": "^1.1.2",
    "@endo/init": "^1.0.4",
    "@endo/far": "^1.0.4",
    "@endo/promise-kit": "^1.0.4",
    "@endo/stream": "^1.1.0",
    "import-meta-resolve": "^2.2.1"
  },
  "devDependencies": {
    "@agoric/deploy-script-support": "^0.10.3",
    "@agoric/governance": "^0.10.3",
    "@agoric/store": "^0.9.2",
    "@agoric/swingset-liveslots": "^0.10.2",
    "ava": "^5.3.0",
    "c8": "^7.13.0",
    "tsx": "3.12.8"
  },
  "files": [
    "CHANGELOG.md",
    "src/",
    "scripts/",
    "tools/",
    "*.json",
    "globals.d.ts",
    "exported.js"
  ],
  "engines": {
    "node": ">=14.15.0"
  },
  "ava": {
    "extensions": {
      "js": true,
      "ts": "module"
    },
    "files": [
      "test/**/test-*.js",
      "test/**/test-*.ts"
    ],
    "nodeArguments": [
      "--loader=tsx",
      "--no-warnings"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "20m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 87.57
  }
}

{
  "name": "@agoric/smart-wallet",
  "version": "0.5.3",
  "description": "Wallet contract",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "build": "yarn build:bundles",
    "build:bundles": "node ./scripts/build-bundles.js",
    "prepack": "yarn run -T tsc --build tsconfig.build.json",
    "postpack": "git clean -f '*.d.*ts*' '*.tsbuildinfo'",
    "test": "ava",
    "test:c8": "c8 --all $C8_OPTIONS ava",
    "test:xs": "exit 0",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint-fix": "yarn lint:eslint --fix",
    "lint:types": "yarn run -T tsc",
    "lint:eslint": "yarn run -T eslint ."
  },
  "devDependencies": {
    "@agoric/casting": "workspace:*",
    "@agoric/cosmic-proto": "workspace:*",
    "@agoric/swingset-vat": "workspace:*",
    "@endo/bundle-source": "^4.1.2",
    "@endo/captp": "^4.4.8",
    "@endo/init": "^1.1.12",
    "ava": "^6.4.1",
    "import-meta-resolve": "^4.1.0"
  },
  "dependencies": {
    "@agoric/ertp": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/notifier": "workspace:*",
    "@agoric/store": "workspace:*",
    "@agoric/vat-data": "workspace:*",
    "@agoric/vats": "workspace:*",
    "@agoric/vow": "workspace:*",
    "@agoric/zoe": "workspace:*",
    "@agoric/zone": "workspace:*",
    "@endo/errors": "^1.2.13",
    "@endo/eventual-send": "^1.3.4",
    "@endo/far": "^1.1.14",
    "@endo/marshal": "^1.8.0",
    "@endo/nat": "^5.1.3",
    "@endo/patterns": "^1.7.0",
    "@endo/promise-kit": "^1.1.13"
  },
  "files": [
    "src/"
  ],
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric"
  },
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric/issues"
  },
  "homepage": "https://github.com/Agoric/agoric#readme",
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "2m"
  },
  "publishConfig": {
    "access": "public"
  },
  "typeCoverage": {
    "atLeast": 94.51
  },
  "engines": {
    "node": "^20.9 || ^22.11"
  }
}

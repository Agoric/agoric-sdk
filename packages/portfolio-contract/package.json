{
  "name": "@aglocal/portfolio-contract",
  "private": true,
  "version": "0.1.0",
  "description": "portfolio-contract aka ymax0 or YMax Proof of Concept (PoC)",
  "type": "module",
  "files": [
    "src",
    "tools"
  ],
  "scripts": {
    "build": "echo see ../portfolio-deploy; exit 0",
    "test": "ava",
    "test:c8": "c8 --all $C8_OPTIONS ava",
    "test:xs": "exit 0",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint-fix": "yarn lint:eslint --fix",
    "lint:eslint": "yarn run -T eslint .",
    "lint:types": "yarn run -T tsc"
  },
  "devDependencies": {
    "@agoric/ertp": "workspace:*",
    "@agoric/fast-usdc": "workspace:*",
    "@agoric/portfolio-api": "workspace:*",
    "@agoric/swingset-liveslots": "workspace:*",
    "@agoric/zoe": "workspace:*",
    "@agoric/zone": "workspace:*",
    "@endo/init": "^1.1.12",
    "@endo/nat": "^5.1.3",
    "@endo/promise-kit": "^1.1.13",
    "@fast-check/ava": "^2.0.1",
    "ava": "^5.3.0",
    "c8": "^10.1.3",
    "ts-blank-space": "^0.6.1"
  },
  "dependencies": {
    "@agoric/cosmic-proto": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/orchestration": "workspace:*",
    "@agoric/time": "workspace:*",
    "@agoric/vats": "workspace:*",
    "@agoric/vow": "workspace:*",
    "@endo/base64": "^1.0.12",
    "@endo/errors": "^1.2.13",
    "@endo/far": "^1.1.14",
    "@endo/pass-style": "^1.6.3",
    "@endo/patterns": "^1.7.0"
  },
  "ava": {
    "extensions": {
      "js": true,
      "ts": "module"
    },
    "files": [
      "test/**/*.test.*"
    ],
    "nodeArguments": [
      "--import=ts-blank-space/register",
      "--no-warnings"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "20m"
  },
  "typeCoverage": {
    "atLeast": 96.46
  },
  "engines": {
    "node": "^20.9 || ^22.11"
  }
}

{
  "name": "@aglocal/portfolio-contract",
  "private": true,
  "version": "0.1.0",
  "description": "Dapp to manage a portfolio of stables",
  "type": "module",
  "workspaces": [
    "ui"
  ],
  "files": [
    "src",
    "tools"
  ],
  "scripts": {
    "build": "exit 0",
    "test": "ava",
    "test:c8": "c8 --all $C8_OPTIONS ava",
    "test:xs": "exit 0",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint-fix": "yarn lint:eslint --fix",
    "lint:eslint": "yarn run -T eslint .",
    "lint:types": "yarn run -T tsc",
    "start:ui": "cd ui && yarn dev"
  },
  "devDependencies": {
    "@agoric/ertp": "workspace:*",
    "@agoric/fast-usdc": "workspace:*",
    "@agoric/swingset-liveslots": "workspace:*",
    "@agoric/synpress": "^3.8.4-beta.1",
    "@agoric/vow": "workspace:*",
    "@agoric/zoe": "workspace:*",
    "@agoric/zone": "workspace:*",
    "@endo/init": "^1.1.9",
    "@endo/nat": "^5.1.0",
    "@endo/promise-kit": "^1.1.10",
    "@fast-check/ava": "^2.0.1",
    "@types/node": "^20.0.0",
    "ava": "^5.3.0",
    "c8": "^10.1.3",
    "eslint-config-turbo": "^1.13.0",
    "eslint-plugin-chai-friendly": "^0.7.4",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-testing-library": "^6.2.0",
    "eslint-plugin-ui-testing": "^2.0.1",
    "serve": "^14.2.1",
    "ts-blank-space": "^0.6.1"
  },
  "dependencies": {
    "@agoric/cosmic-proto": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/orchestration": "workspace:*",
    "@agoric/vats": "workspace:*",
    "@endo/errors": "^1.2.10",
    "@endo/far": "^1.1.11",
    "@endo/pass-style": "^1.5.0",
    "@endo/patterns": "^1.5.0",
    "eslint": "^8.57.0"
  },
  "ava": {
    "extensions": {
      "js": true,
      "ts": "module"
    },
    "files": [
      "test/**/*.test.*"
    ],
    "nodeArguments": [
      "--import=ts-blank-space/register",
      "--no-warnings"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "20m"
  }
}

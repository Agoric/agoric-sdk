{
  "name": "@agoric/xsnap-lockdown",
  "version": "0.14.0",
  "description": "Endo/lockdown initialization bundle for xsnap workers",
  "author": "Agoric",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/index.js",
  "scripts": {
    "build": "node scripts/build-bundle.js",
    "clean": "rm -rf dist",
    "lint": "run-s --continue-on-error lint:*",
    "lint:js": "eslint 'src/**/*.js' 'lib/**/*.js' 'scripts/**/*.js' 'test/**/*.js'",
    "lint:types": "tsc",
    "lint-fix": "eslint --fix 'src/**/*.js' 'lib/**/*.js' 'scripts/**/*.js' 'test/**/*.js'",
    "test": "ava",
    "test:c8": "c8 --all $C8_OPTIONS ava",
    "test:xs": "exit 0"
  },
  "devDependencies": {
    "@endo/bundle-source": "^3.5.1",
    "@endo/init": "^1.1.8",
    "ava": "^5.3.0",
    "c8": "^10.1.2",
    "source-map": "^0.7.4"
  },
  "files": [
    "LICENSE*",
    "lib",
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 73.54
  }
}

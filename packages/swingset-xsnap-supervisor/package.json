{
  "name": "@agoric/swingset-xsnap-supervisor",
  "version": "0.10.2",
  "description": "Supervisor/Liveslots bundle for swingset xsnap workers",
  "author": "Agoric",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build:bundle": "node scripts/build-bundle.js",
    "build": "yarn build:bundle",
    "clean": "rm -rf dist",
    "lint": "yarn run --top-level run-s --continue-on-error 'lint:*'",
    "lint:js": "eslint 'lib/**/*.js' 'src/**/*.js' 'scripts/**/*.js' 'test/**/*.js'",
    "lint:types": "yarn run --top-level tsc",
    "lint-fix": "eslint --fix 'lib/**/*.js' 'src/**/*.js' 'scripts/**/*.js' 'test/**/*.js'",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0"
  },
  "devDependencies": {
    "@agoric/assert": "workspace:*",
    "@agoric/swingset-liveslots": "workspace:*",
    "@endo/bundle-source": "^3.0.1",
    "@endo/import-bundle": "^1.0.1",
    "@endo/init": "^1.0.1",
    "@endo/marshal": "^1.0.1",
    "ava": "^5.3.0",
    "c8": "^7.13.0"
  },
  "files": [
    "LICENSE*",
    "lib",
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 83.64
  }
}

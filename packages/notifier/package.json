{
  "name": "@agoric/notifier",
  "version": "0.3.31",
  "description": "Notifier allows services to update clients about state changes using a stream of promises",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=11.0"
  },
  "scripts": {
    "build": "exit 0",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0",
    "lint-fix": "yarn lint:eslint --fix && yarn lint:types",
    "lint-check": "yarn lint",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint:eslint": "eslint '**/*.js'",
    "lint:types": "tsc -p jsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk.git"
  },
  "keywords": [
    "notifier"
  ],
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric-sdk/issues"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "dependencies": {
    "@agoric/assert": "^0.3.14",
    "@agoric/eventual-send": "^0.13.30",
    "@agoric/marshal": "^0.4.28",
    "@agoric/promise-kit": "^0.2.28"
  },
  "devDependencies": {
    "@agoric/install-ses": "^0.5.28",
    "@agoric/swingset-vat": "^0.23.0",
    "@endo/ses-ava": "^0.2.8",
    "ava": "^3.12.1",
    "c8": "^7.7.2"
  },
  "files": [
    "src/",
    "exported.js",
    "NEWS.md"
  ],
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "eslintIgnore": [
    "bundle-*.js"
  ],
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "2m"
  }
}

{
  "name": "@agoric/vow",
  "version": "0.1.0",
  "description": "Remote (shortening and disconnection-tolerant) Promise-likes",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "build": "exit 0",
    "prepack": "yarn run -T tsc --build tsconfig.build.json",
    "postpack": "git clean -f '*.d.ts*' '*.tsbuildinfo'",
    "test": "ava",
    "test:xs": "exit 0",
    "test:xs:ci": "npm run test:xs",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint:eslint": "yarn run -T eslint .",
    "lint:types": "yarn run -T tsc"
  },
  "dependencies": {
    "@agoric/base-zone": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@endo/env-options": "^1.1.10",
    "@endo/errors": "^1.2.12",
    "@endo/eventual-send": "^1.3.3",
    "@endo/pass-style": "^1.6.2",
    "@endo/patterns": "^1.6.1",
    "@endo/promise-kit": "^1.1.12"
  },
  "devDependencies": {
    "@agoric/internal": "workspace:*",
    "@agoric/swingset-vat": "workspace:*",
    "@agoric/zone": "workspace:*",
    "@endo/far": "^1.1.13",
    "@endo/init": "^1.1.11",
    "ava": "^5.3.0",
    "tsd": "^0.31.1"
  },
  "ava": {
    "require": [
      "@endo/init/debug.js"
    ],
    "files": [
      "test/**/*.test.*"
    ]
  },
  "author": "Agoric",
  "license": "Apache-2.0",
  "files": [
    "*.js",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typeCoverage": {
    "atLeast": 91.91
  }
}

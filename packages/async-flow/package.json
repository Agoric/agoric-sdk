{
  "name": "@agoric/async-flow",
  "version": "0.1.0",
  "description": "Upgrade async functions at await points by replay",
  "type": "module",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "main": "./index.js",
  "scripts": {
    "build": "exit 0",
    "prepack": "yarn run -T tsc --build tsconfig.build.json",
    "postpack": "git clean -f '*.d.*ts*' '*.tsbuildinfo'",
    "test": "ava",
    "test:c8": "c8 --all ${C8_OPTIONS:-} ava",
    "test:xs": "exit 0",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint:eslint": "yarn run -T eslint .",
    "lint:types": "yarn run -T tsc"
  },
  "exports": {
    ".": "./index.js"
  },
  "keywords": [],
  "author": "Agoric",
  "license": "Apache-2.0",
  "dependencies": {
    "@agoric/base-zone": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/store": "workspace:*",
    "@agoric/vow": "workspace:*",
    "@endo/common": "catalog:endo",
    "@endo/errors": "catalog:endo",
    "@endo/eventual-send": "catalog:endo",
    "@endo/marshal": "catalog:endo",
    "@endo/pass-style": "catalog:endo",
    "@endo/patterns": "catalog:endo",
    "@endo/promise-kit": "catalog:endo"
  },
  "devDependencies": {
    "@agoric/swingset-vat": "workspace:*",
    "@agoric/zone": "workspace:*",
    "@endo/env-options": "catalog:endo",
    "ava": "^5.3.0",
    "tsd": "^0.33.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20.9 || ^22.11"
  },
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "20m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 77.17
  }
}

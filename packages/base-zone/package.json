{
  "name": "@agoric/base-zone",
  "version": "0.1.0",
  "description": "Allocation zone abstraction library and heap implementation",
  "type": "module",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "main": "./src/index.js",
  "scripts": {
    "build": "exit 0",
    "prepack": "yarn run -T tsc --build tsconfig.build.json",
    "postpack": "git clean -f '*.d.*ts*' '*.tsbuildinfo'",
    "test": "ava",
    "test:c8": "c8 --all ${C8_OPTIONS:-} ava",
    "test:xs": "exit 0",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint:types": "yarn run -T tsc",
    "lint:eslint": "yarn run -T eslint ."
  },
  "exports": {
    ".": "./src/index.js",
    "./zone-helpers.js": "./zone-helpers.js",
    "./heap.js": "./heap.js",
    "./tools/*": "./tools/*"
  },
  "keywords": [],
  "author": "Agoric",
  "license": "Apache-2.0",
  "dependencies": {
    "@agoric/store": "workspace:*",
    "@endo/common": "catalog:endo",
    "@endo/errors": "catalog:endo",
    "@endo/exo": "catalog:endo",
    "@endo/far": "catalog:endo",
    "@endo/pass-style": "catalog:endo",
    "@endo/patterns": "catalog:endo"
  },
  "devDependencies": {
    "@endo/init": "catalog:endo",
    "@endo/ses-ava": "catalog:endo",
    "ava": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20.9 || ^22.11"
  },
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "20m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 93.22
  }
}

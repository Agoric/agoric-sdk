{
  "name": "@agoric/base-zone",
  "version": "0.1.0",
  "description": "Allocation zone abstraction library and heap implementation",
  "type": "module",
  "repository": "https://github.com/Agoric/agoric-sdk",
  "main": "./src/index.js",
  "scripts": {
    "build": "exit 0",
    "prepack": "yarn run -T tsc --build tsconfig.build.json",
    "postpack": "git clean -f '*.d.*ts*' '*.tsbuildinfo'",
    "test": "ava",
    "test:c8": "c8 --all ${C8_OPTIONS:-} ava",
    "test:xs": "exit 0",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint:types": "yarn run -T tsc",
    "lint:eslint": "yarn run -T eslint ."
  },
  "exports": {
    ".": "./src/index.js",
    "./zone-helpers.js": "./zone-helpers.js",
    "./heap.js": "./heap.js",
    "./tools/*": "./tools/*"
  },
  "keywords": [],
  "author": "Agoric",
  "license": "Apache-2.0",
  "dependencies": {
    "@agoric/store": "workspace:*",
    "@endo/common": "^1.2.13",
    "@endo/errors": "^1.2.13",
    "@endo/exo": "^1.5.12",
    "@endo/far": "^1.1.14",
    "@endo/pass-style": "^1.6.3",
    "@endo/patterns": "^1.7.0"
  },
  "devDependencies": {
    "@endo/init": "^1.1.12",
    "@endo/ses-ava": "^1.3.2",
    "ava": "^6.4.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20.9 || ^22.11"
  },
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "20m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 93.22
  }
}

{
  "name": "@agoric/zoe",
  "version": "0.15.7",
  "description": "Zoe: the Smart Contract Framework for Offer Enforcement",
  "parsers": {
    "js": "mjs"
  },
  "main": "src/zoeService/zoe.js",
  "engines": {
    "node": ">=11.0"
  },
  "scripts": {
    "build": "yarn build-zcfBundle",
    "test": "ava --verbose",
    "test:xs": "yarn test:xs-unit",
    "test:xs-unit": "ava-xs --verbose",
    "test:xs-worker": "SWINGSET_WORKER_TYPE=xs-worker ava -c 2 test/swingsetTests/**/test-*.js",
    "build-zcfBundle": "node -r esm scripts/build-zcfBundle.js",
    "lint-fix": "yarn lint:eslint --fix && yarn lint:types",
    "lint-check": "yarn lint",
    "lint": "yarn lint:types && yarn lint:eslint",
    "lint:eslint": "eslint '**/*.js'",
    "lint:types": "tsc -p jsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk.git"
  },
  "keywords": [
    "smart",
    "contract",
    "cryptocurrency",
    "exchange",
    "tokens"
  ],
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric-sdk/issues"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "dependencies": {
    "@agoric/assert": "^0.2.12",
    "@agoric/bundle-source": "^1.3.7",
    "@agoric/ertp": "^0.11.2",
    "@agoric/eventual-send": "^0.13.14",
    "@agoric/import-bundle": "^0.2.14",
    "@agoric/marshal": "^0.4.11",
    "@agoric/nat": "^4.0.0",
    "@agoric/notifier": "^0.3.14",
    "@agoric/promise-kit": "^0.2.13",
    "@agoric/same-structure": "^0.1.13",
    "@agoric/store": "^0.4.14",
    "@agoric/swingset-vat": "^0.17.2",
    "@agoric/transform-metering": "^1.4.12"
  },
  "devDependencies": {
    "@agoric/install-metering-and-ses": "^0.2.13",
    "@agoric/install-ses": "^0.5.13",
    "ava": "^3.12.1",
    "esm": "agoric-labs/esm#Agoric-built",
    "ses": "^0.13.1"
  },
  "files": [
    "bundles/",
    "src/",
    "tools/",
    "contractFacet.js",
    "exported.js",
    "NEWS.md"
  ],
  "ava-xs": {
    "exclude": [
      "# We use SWINGSET_WORKER_TYPE=xs ava to run these...",
      "swingsetTests"
    ]
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": [
      "esm"
    ],
    "timeout": "20m"
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "eslintIgnore": [
    "bundle-*.js"
  ],
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  }
}

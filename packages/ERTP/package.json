{
  "name": "@agoric/ertp",
  "version": "0.16.2",
  "description": "Electronic Rights Transfer Protocol (ERTP). A smart contract framework for exchanging electronic rights",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "build": "exit 0",
    "prepack": "echo \"export {}; \" | cat - src/types-ambient.js > src/types.js && tsc --build --clean tsconfig.build.json",
    "postpack": "git clean -f '*.d.ts*' src/types.js",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava",
    "test:xs": "yarn test:xs-unit && yarn test:xs-worker",
    "test:xs-unit": "ava-xs",
    "test:xs-worker": "SWINGSET_WORKER_TYPE=xs-worker ava -c 2 'test/swingsetTests/**/test-*.js'",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run --top-level run-s --continue-on-error 'lint:*'",
    "lint:eslint": "yarn run --top-level eslint .",
    "lint:types": "yarn run --top-level tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk.git"
  },
  "keywords": [
    "smart",
    "contract",
    "cryptocurrency",
    "exchange",
    "tokens"
  ],
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric-sdk/issues"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "dependencies": {
    "@agoric/assert": "workspace:*",
    "@agoric/notifier": "workspace:*",
    "@agoric/store": "workspace:*",
    "@agoric/vat-data": "workspace:*",
    "@endo/eventual-send": "^1.0.1",
    "@endo/far": "^1.0.1",
    "@endo/marshal": "^1.0.1",
    "@endo/nat": "^5.0.1",
    "@endo/patterns": "^1.0.1",
    "@endo/promise-kit": "^1.0.1"
  },
  "devDependencies": {
    "@agoric/swingset-vat": "workspace:*",
    "@agoric/xsnap": "workspace:*",
    "@endo/bundle-source": "^3.0.1",
    "@fast-check/ava": "^1.1.5",
    "ava": "^5.3.0",
    "tsd": "^0.28.1"
  },
  "files": [
    "src",
    "NEWS.md",
    "exported.js"
  ],
  "ava-xs": {
    "exclude": [
      "swingsetTests",
      "# fast-check unsupported",
      "test/unitTests/test-amountProperties.js",
      "test/unitTests/test-inputValidation.js",
      "test/unitTests/test-issuerObj.js"
    ]
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "5m"
  },
  "publishConfig": {
    "access": "public"
  },
  "typeCoverage": {
    "atLeast": 90.37
  }
}

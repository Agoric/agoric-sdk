{
  "name": "@agoric/ertp",
  "version": "0.17.0-u22.1",
  "description": "Electronic Rights Transfer Protocol (ERTP). A smart contract framework for exchanging electronic rights",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": "^20.9 || ^22.11"
  },
  "scripts": {
    "build": "exit 0",
    "prepack": "yarn run -T tsc --build tsconfig.build.json",
    "postpack": "git clean -f '*.d.*ts*' '*.tsbuildinfo'",
    "test": "ava",
    "test:c8": "c8 --all ${C8_OPTIONS:-} ava",
    "test:xs": "yarn test:xs-worker",
    "test:xs-unit": "exit 0",
    "test:xs-worker": "SWINGSET_WORKER_TYPE=xs-worker ava -c 2 test/swingsetTests",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint:eslint": "yarn run -T eslint .",
    "lint:types": "yarn run -T tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk.git"
  },
  "keywords": [
    "smart",
    "contract",
    "cryptocurrency",
    "exchange",
    "tokens"
  ],
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric-sdk/issues"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "dependencies": {
    "@agoric/notifier": "workspace:*",
    "@agoric/store": "workspace:*",
    "@agoric/vat-data": "workspace:*",
    "@agoric/zone": "workspace:*",
    "@endo/errors": "^1.2.13",
    "@endo/eventual-send": "^1.3.4",
    "@endo/far": "^1.1.14",
    "@endo/marshal": "^1.8.0",
    "@endo/nat": "^5.1.3",
    "@endo/patterns": "^1.7.0",
    "@endo/promise-kit": "^1.1.13"
  },
  "devDependencies": {
    "@agoric/swingset-vat": "workspace:*",
    "@endo/bundle-source": "^4.1.2",
    "@fast-check/ava": "^1.1.5",
    "ava": "^5.3.0",
    "tsd": "^0.33.0"
  },
  "files": [
    "src",
    "NEWS.md",
    "exported.js",
    "exported.d.ts"
  ],
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "5m"
  },
  "publishConfig": {
    "access": "public"
  },
  "typeCoverage": {
    "atLeast": 92.99
  }
}

// This file can contain .js-specific Typescript compiler config.
{
  "compilerOptions": {
    "target": "es2020",

    "noEmit": true,
/*
    // The following flags are for creating .d.ts files:
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
*/

{
  "name": "agoric",
  "version": "0.21.1",
  "description": "Manage the Agoric Javascript smart contract platform",
  "type": "module",
  "main": "src/main.js",
  "bin": {
    "agops": "src/bin-agops.js",
    "agoric": "src/entrypoint.js"
  },
  "exports": {
    "./src/entrypoint.js": "./src/entrypoint.js",
    "./src/helpers.js": "./src/helpers.js",
    "./src/lib/index.js": "./src/lib/index.js"
  },
  "files": [
    "src",
    "tools",
    "exported.js"
  ],
  "scripts": {
    "build": "node ./scripts/get-sdk-package-names.js > src/sdk-package-names.js",
    "test": "ava",
    "test:c8": "c8 --all ${C8_OPTIONS:-} ava",
    "test:xs": "exit 0",
    "integration-test": "ava --config .ava-integration-test.config.js",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint:types": "yarn run -T tsc",
    "lint:eslint": "yarn run -T eslint ."
  },
  "devDependencies": {
    "@agoric/cosmic-swingset": "workspace:*",
    "@agoric/deploy-script-support": "workspace:*",
    "ava": "^5.3.0",
    "c8": "^10.1.2"
  },
  "dependencies": {
    "@agoric/access-token": "workspace:*",
    "@agoric/cache": "workspace:*",
    "@agoric/casting": "workspace:*",
    "@agoric/client-utils": "workspace:*",
    "@agoric/cosmic-proto": "workspace:*",
    "@agoric/ertp": "workspace:*",
    "@agoric/governance": "workspace:*",
    "@agoric/inter-protocol": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/network": "workspace:*",
    "@agoric/smart-wallet": "workspace:*",
    "@agoric/store": "workspace:*",
    "@agoric/swingset-vat": "workspace:*",
    "@agoric/vats": "workspace:*",
    "@agoric/zoe": "workspace:*",
    "@agoric/zone": "workspace:*",
    "@cosmjs/crypto": "^0.36.0",
    "@cosmjs/encoding": "^0.36.0",
    "@cosmjs/math": "^0.36.0",
    "@cosmjs/proto-signing": "^0.36.0",
    "@cosmjs/stargate": "^0.36.0",
    "@endo/base64": "catalog:endo",
    "@endo/bundle-source": "catalog:endo",
    "@endo/captp": "catalog:endo",
    "@endo/compartment-mapper": "catalog:endo",
    "@endo/env-options": "catalog:endo",
    "@endo/errors": "catalog:endo",
    "@endo/far": "catalog:endo",
    "@endo/init": "catalog:endo",
    "@endo/marshal": "catalog:endo",
    "@endo/nat": "catalog:endo",
    "@endo/patterns": "catalog:endo",
    "@endo/promise-kit": "catalog:endo",
    "@endo/zip": "catalog:endo",
    "@iarna/toml": "^2.2.3",
    "anylogger": "^0.21.0",
    "chalk": "^5.2.0",
    "commander": "^12.1.0",
    "deterministic-json": "^1.0.5",
    "inquirer": "^8.2.2",
    "opener": "^1.5.2",
    "tmp": "^0.2.1",
    "ws": "^7.2.0"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk"
  },
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric/agoric-sdk"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "typeCoverage": {
    "atLeast": 79.88
  },
  "engines": {
    "node": "^20.9 || ^22.11"
  }
}

{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    // This prevents checking of .d.ts files. We would like to check the ones we write
    // but we leave this off because of the errors in deps we don't control.
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUncheckedSideEffectImports": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    // .ts allows us to include in bundles files that are JS executable (with TS chars blanked) but end in .ts
    "allowImportingTsExtensions": true,
    // incompatible with project references (TS2878)
    "rewriteRelativeImportExtensions": false,
    "noEmit": true
  },
  "include": [
    "eslint.config.mjs",
    "dist",
    "scripts",
    "types/**/*.d.ts"
  ]
}

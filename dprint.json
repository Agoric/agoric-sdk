{
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "all",
    "singleQuote": true
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,cjs,mjs,cts,mts}"
  ],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    ".yarn",
    "bundles",
    "compiled",
    "__generated",
    "dist",
    "moddable",
    "public",
    "vendor",
    // subrepos
    "/packages/xsnap/moddable",
    "/packages/xsnap/xsnap-native"
  ],
  "plugins": [
    "https://plugins.dprint.dev/toml-0.7.0.wasm",
    "https://plugins.dprint.dev/dockerfile-0.3.3.wasm",
    "https://plugins.dprint.dev/prettier-0.62.0.json@80fefd1450bfd3f469590cc6a3f40f6ace26974f948b9602124f486036fbdfab"
  ]
}

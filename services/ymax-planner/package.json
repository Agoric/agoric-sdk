{
  "name": "@aglocal/ymax-planner",
  "private": true,
  "version": "1.0.0",
  "description": "Portfolio contract off-chain engine",
  "main": "dist/entrypoint.js",
  "type": "module",
  "scripts": {
    "start": "node ./dist/entrypoint.js",
    "dev": "nodemon --ext js,ts --exec 'node --import ts-blank-space/register ./src/entrypoint.ts || touch ./src/entrypoint.ts'",
    "debug": "node --inspect ./dist/entrypoint.js",
    "start:docker": "docker compose up --build",
    "start:deps": "docker compose up --scale app=0",
    "build": "node ./esbuild.config.mjs",
    "lint": "yarn run -T run-s --continue-on-error 'lint:*'",
    "lint-fix": "yarn lint:eslint --fix",
    "lint:eslint": "yarn run -T eslint src/",
    "lint:types": "yarn run -T tsc",
    "test": "ava",
    "test:xs": "exit 0"
  },
  "keywords": [
    "agoric",
    "portfolio",
    "engine",
    "ymax"
  ],
  "author": "Agoric",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8",
    "ava": "^6.3.0",
    "esbuild": "^0.25.2",
    "nodemon": "^3.1.10",
    "ts-blank-space": "^0.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@aglocal/portfolio-contract": "workspace:*",
    "@aglocal/portfolio-deploy": "workspace:*",
    "@agoric/client-utils": "workspace:*",
    "@agoric/ertp": "workspace:*",
    "@agoric/internal": "workspace:*",
    "@agoric/orchestration": "workspace:*",
    "@cosmjs/crypto": "^0.36.0",
    "@cosmjs/encoding": "^0.36.0",
    "@cosmjs/proto-signing": "^0.36.0",
    "@cosmjs/stargate": "^0.36.0",
    "@endo/errors": "catalog:endo",
    "@endo/init": "catalog:endo",
    "@endo/lockdown": "catalog:endo",
    "@endo/nat": "catalog:endo",
    "@endo/pass-style": "catalog:endo",
    "@endo/patterns": "catalog:endo",
    "@endo/promise-kit": "catalog:endo",
    "@google-cloud/secret-manager": "^6.1.0",
    "chain-registry": "^2.0.44",
    "dotenv": "^17.2.1",
    "ethers": "^6.13.0",
    "json-rpc-2.0": "^1.7.1",
    "ky": "^1.4.0",
    "ts-blank-space": "^0.6.1",
    "ws": "^8.18.3"
  },
  "ava": {
    "extensions": {
      "js": true,
      "ts": "module"
    },
    "files": [
      "test/**/*.test.*"
    ],
    "nodeArguments": [
      "--import=ts-blank-space/register",
      "--no-warnings"
    ],
    "require": [
      "@endo/init/debug.js"
    ],
    "timeout": "30s"
  },
  "typeCoverage": {
    "atLeast": 93.19
  },
  "engines": {
    "node": "^20.9 || ^22.11"
  }
}

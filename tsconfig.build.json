// Top-level build tsconfig for validation. Build output not used.
// Packages are published independently and have their own builds.
{
    "extends": [
        "./tsconfig.json",
        "./tsconfig-build-options.json"
    ],
    "compilerOptions": {
        "outDir": "./build"
    },
    "exclude": [
        "packages/agoric-cli",
        "packages/benchmark",
        "packages/cosmic-swingset",
        "packages/deployment",
        "packages/import-manager",
        "packages/solo",
        "packages/stat-logger",
        "packages/swingset-runner",
        "packages/telemetry",
        "packages/xsnap/moddable",
        "packages/xsnap/xsnap-native",
        "packages/xsnap-lockdown",
        "**/build",
        "**/dist",
        "**/docs",
        "**/*.umd.js",
        "**/scripts",
        "**/test"
    ],
    "include": [
        "./**/*.ts",
        "packages/**/*.js"
    ]
}

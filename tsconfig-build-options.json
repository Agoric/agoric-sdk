{
    "compilerOptions": {
        "composite": true,
        "incremental": true,
        // outDir and tsBuildInfoFile must be set per-package (paths resolve relative to this file, not the extending file)
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true
    },
    "exclude": [
        // Implies there's a types-index.d.ts already which shouldn't be overwritten
        "**/types-index.js",
        "**/proposals",
        "**/scripts",
        "**/tools",
        "**/test",
    ]
}
